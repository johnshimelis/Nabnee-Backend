{
  "apps": [{
    "name": "nabnee-server",
    "script": "app.js",
    "cwd": "/path/to/your/app",
    "instances": "max",
    "exec_mode": "cluster",
    "env": {
      "NODE_ENV": "development",
      "PORT": 3001
    },
    "env_production": {
      "NODE_ENV": "production",
      "PORT": 3001
    },
    "log_file": "./logs/app.log",
    "out_file": "./logs/out.log",
    "error_file": "./logs/error.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "watch": false,
    "ignore_watch": ["node_modules", "logs"],
    "restart_delay": 4000,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}
